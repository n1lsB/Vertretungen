<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:id="@+id/widget_row_rootlayout">

    <TextView
        android:id="@+id/widget_row_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/widget_row_klasse"
        android:text="Vertretung"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/widget_row_klasse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="false"
        android:layout_alignParentTop="true"
        android:text="EP"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/widget_row_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:text="1 - 2. Stunde"
        android:textAlignment="textEnd"
        android:textColor="@android:color/white"
        android:textStyle="normal|italic" />

    <TextView
        android:id="@+id/widget_row_original"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/widget_row_information"
        android:text="D"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/widget_row_replacement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/widget_row_information"
        android:text="D"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/widget_row_replacement"
        android:layout_centerHorizontal="true"
        android:id="@+id/widget_row_arrow"
        android:text="â†’"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/widget_row_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/widget_row_klasse"
        android:layout_centerInParent="true"
        android:layout_centerVertical="false"
        android:text="Aufgabe"
        android:textColor="@android:color/white" />
</RelativeLayout>