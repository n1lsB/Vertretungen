<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.nils_beyer.android.Vertretungen">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_compare_arrows_black_24dp"
        android:label="@string/app_name_short"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.samsung.android.sdk.multiwindow.enable"
            android:value="true" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name_short">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DetailActivity" />

        <service
            android:name=".DownloadIntentService"
            android:exported="false" />
        <service
            android:name=".widget.WidgetService"
            android:exported="false"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <activity
            android:name=".InfoActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" />
        <activity android:name=".LoginActivity" />

        <!-- Widget -->
        <receiver
            android:name=".widget.VertretungenWidgetProvider"
            android:label="Vertretungen Widget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_vertretungen" />
        </receiver>

        <activity android:name=".preferences.MarkedCoursesActivity"></activity>
    </application>

</manifest>